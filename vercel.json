{
    "version": 2,
    "builds": [
      {
        "src": "backend/server.js",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "backend/server.js"
      },
      {
        "src": "/(.*)",
        "dest": "frontend/index.html"
      }
    ],
    "scripts": {
      "dev": "vite",
      "build": "vite build",
      "preview": "vite preview"
  }
}